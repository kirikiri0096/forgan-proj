<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_sup_email">
    <TextView
        android:id="@+id/tvRegSupEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeRegSupEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="โปรดระบุขที่อยู่อีเมล"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeRegSupEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/editRegSupEmail"
            android:gravity="center"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/round_edittext"
            android:hint="ป้อนที่อยู่อีเมล"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btRegSupEmail"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editRegSupEmail"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bt"
            android:text="ดำเนินการต่อ"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hasRegSupEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/colorPrimary"
        android:textSize="11dp"
        tools:ignore="OnClick" />

</RelativeLayout>