<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_sup_pass">

    <TextView
        android:id="@+id/tvRegSupPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeRegSupPass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="สร้างรหัสผ่าน"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeRegSupPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/editRegSupPass"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/round_edittext"
            android:gravity="center"
            android:hint="รหัสผ่าน"
            android:singleLine="true"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvRegSupPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editRegSupPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="ป้อนอักขระอย่างน้อยหกตัวให้ผสมกันทั้งตัวเลข"
            android:textColor="#707070" />

        <TextView
            android:id="@+id/tvRegSupPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRegSupPass1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="ตัวอักษรพิมพ์เล็ก และพิมพ์ใหญ่"
            android:textColor="#707070" />

        <Button
            android:id="@+id/btRegSupPass"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvRegSupPass2"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bt"
            android:text="ดำเนินการต่อ"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hasRegSupPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/colorPrimary"
        android:textSize="11dp"
        />
</RelativeLayout>