<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_user_password">

    <TextView
        android:id="@+id/tvUserPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="สร้างรหัสผ่าน"
        android:textColor="@color/TextColor"
        android:textSize="19dp"
        android:layout_above="@+id/relativePassWord"/>

    <RelativeLayout
        android:id="@+id/relativePassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/editUserPass"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/round_edittext"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="15dp"
            android:hint="รหัสผ่าน"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvUserPass1"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/editUserPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ป้อนอักขระอย่างน้อยหกตัวให้ผสมกันทั้งตัวเลข"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#707070"/>
        <TextView
            android:id="@+id/tvUserPass2"
            android:layout_below="@+id/tvUserPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ตัวอักษรพิมพ์เล็ก และพิมพ์ใหญ่"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#707070" />

        <Button
            android:id="@+id/btUserPass"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tvUserPass2"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bt"
            android:text="ดำเนินการต่อ"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hasSupPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/TextColor"
        android:textSize="11dp"
        />

</RelativeLayout>