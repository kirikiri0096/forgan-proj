<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reg_sup_name">

    <TextView
        android:id="@+id/tvRegSupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeRegSupName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="โปรดระบุข้อมูลของหน่วยงาน"
        android:textColor="@color/colorPrimary"
        android:textSize="19dp" />

    <RelativeLayout
        android:id="@+id/relativeRegSupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/editRegSupPass"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/round_edittext"
            android:hint="รหัสหน่วยงาน"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editRegSupName"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editRegSupPass"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_edittext"
            android:hint="ชื่อหน่วยงาน"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btRegSupName"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editRegSupName"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_bt"
            android:text="ดำเนินการต่อ"
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hasRegSupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="คุณมีบัญชีอยู่แล้วใช่ไหม"
        android:textColor="@color/colorPrimary"
        android:textSize="11dp"/>

</RelativeLayout>